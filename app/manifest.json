{
  "name": "Swiss Knife Mobile",
  "description": "Quick incidence-log report, driver movement tracker",
  "version": "0.0.1",
  "manifest_version": 2,
  "permissions": [
    {
      "fileSystem": [
        "write",
        "retainEntries",
        "directory"
      ]
    },
    "fullscreen",
    "geolocation",
    "storage",
    "unlimitedStorage",
    "http://54.220.157.69/*",
    "http://192.168.38.10/*"
  ],
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "app": {
    "background": {
      "scripts": [
        "scripts/main.js",
        "scripts/chromereload.js"
      ]
    }
  },
  "default_locale": "en",
  "author": "eHealth Africa"
}
